{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Settings": {
    "Database": {
      "MySql": {
        "Server": "144.217.94.131",
        "UserId": "<USER_SECRET>",
        "Password": "<USER_SECRET>",
        "Database": "PalpiteApi"
      }
    },
    "Integrations": {
      "PalpiteFC": {
        "BaseAddress": "http://localhost:5113/"
      },
      "ApiFootball": {
        "BaseAddress": "https://api-football-v1.p.rapidapi.com/",
        "Host": "api-football-v1.p.rapidapi.com",
        "Key": "<USER_SECRET>"
      }
    },
    "PointsConfig": {
      "Points": {
        "HitResult": 10
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "credentials": {
            "login": "843774",
            "password": "<USER_SECRET>"
          },
          "labels": [
            {
              "key": "app",
              "value": "PalpiteFC.Worker.Guesses"
            }
          ],
          "propertiesAsLabels": [ "app" ]
        }
      }
    ]
  }
}